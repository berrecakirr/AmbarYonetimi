@model AmbarYonetimi.ViewModels.LoginViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #007bff, #0056b3);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            background: white;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

            .login-card h3 {
                color: #0056b3;
            }

        .btn-primary {
            background-color: #0056b3;
            border: none;
        }

            .btn-primary:hover {
                background-color: #00409d;
            }

        .form-control::placeholder {
            font-size: 0.9rem;
            color: #aaa;
        }

        a {
            color: #0056b3;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .logo-img {
            width: 220px;
            height: auto;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="login-card">

        <!-- LOGO -->
        <img src="https://rmkcdn.successfactors.com/d47d53cb/c2f8473b-ee20-4d43-a22f-4.png"
             alt="Careers at Martur Fompak"
             class="logo-img" />

        <h3 class="mb-4">
            <i class="fas fa-sign-in-alt me-2"></i>Login
        </h3>

     @*    @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        } *@

        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group mb-3 text-start">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sign-in-alt me-1"></i> Login
                </button>
            </div>

            <div class="text-center">
                <p class="mt-3 text-muted">
                    Don't have an account?
                    <a asp-action="Register" asp-controller="Account">Register here</a>
                </p>
            </div>
        </form>

        <div asp-validation-summary="All" class="text-danger mt-2"></div>
    </div>
</body>
</html>



