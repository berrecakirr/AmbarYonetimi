@model AmbarYonetimi.Models.Kullanici
@{
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>Yeni Kullanıcı Ekle</h2>

<form asp-action="KullaniciEkle" method="post">
    <div class="form-group mb-3">
        <label>Kullanıcı Adı</label>
        <input asp-for="KullaniciAdi" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Şifre</label>
        <input asp-for="Sifre" type="password" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Rol</label>
        <select asp-for="Rol" class="form-control">
            <option>Admin</option>
            <option>User</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

