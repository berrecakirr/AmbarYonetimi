@model List<AmbarYonetimi.Models.Kullanici>
@{
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>Kullanıcı Yönetimi</h2>

<a class="btn btn-primary mb-3" href="@Url.Action("KullaniciEkle", "Admin")">+ Yeni Kullanıcı Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kullanıcı Adı</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.KullaniciAdi</td>
                <td>@item.Rol</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("KullaniciDuzenle", "Admin", new { id = item.Id })">Düzenle</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("KullaniciSil", "Admin", new { id = item.Id })" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
