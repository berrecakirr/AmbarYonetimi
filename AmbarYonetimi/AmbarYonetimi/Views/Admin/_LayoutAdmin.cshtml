@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }

        .sidebar {
            width: 220px;
            background-color: #343a40;
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            overflow-y: auto;
            padding-top: 20px;
        }

            .sidebar h4 {
                color: white;
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar .nav-link {
                color: #ddd;
                padding: 10px 20px;
                display: block;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: #fff;
                }

        .content {
            margin-left: 220px;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>Ambar Yönetimi</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Baslik">
                    <i class="fas fa-chair"></i> Başlık Deposu
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Sunger">
                    <i class="fas fa-couch"></i> Sünger Deposu
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Iskelet">
                    <i class="fas fa-tools"></i> İskelet Deposu
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Kolcak">
                    <i class="fas fa-hand-paper"></i> Kolçak Deposu
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Kilif">
                    <i class="fas fa-tags"></i> Kılıf Deposu
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="KullaniciListesi">
                    <i class="fas fa-users"></i> Kullanıcı Yönetimi
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Raporlar">
                    <i class="fas fa-chart-bar"></i> Raporlar
                </a>
            </li>
            <li class="nav-item mt-3">
                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                </a>
            </li>
        </ul>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
