@model List<AmbarYonetimi.Models.KilifDepo>
@{
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Kılıf Deposu";
}

<h2>Kılıf Deposu</h2>
<a class="btn btn-primary mb-3" href="@Url.Action("Create", "Depo")">+ Yeni Malzeme Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Ürün Kodu</th>
            <th>Raf Kodu</th>
            <th>Hareket Tipi</th>
            <th>Miktar</th>
            <th>İşlem Yapan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UrunAdi</td>
                <td>@item.UrunKodu</td>
                <td>@item.RafKodu</td>
                <td>@item.HareketTipi</td>
                <td>@item.Miktar</td>
                <td>@item.IslemYapan</td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       href="@Url.Action("Edit", "Depo", new { id = item.Id, tablo = "Kilif" })">
                        Düzenle
                    </a>
                    <a class="btn btn-sm btn-danger"
                       href="@Url.Action("Sil", "Kilif", new { id = item.Id })"
                       onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
