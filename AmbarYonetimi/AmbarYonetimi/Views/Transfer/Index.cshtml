<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Raflar Arası Transfer</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        .transfer-card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border: 1px solid #e3e6f0;
        }

        .transfer-arrow {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            min-height: 100px;
        }

        .animated-button {
            transition: all 0.3s ease;
        }

            .animated-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body class="bg-light">
    <div class="container my-5">
        <h2 class="mb-4 text-primary"><i class="fas fa-exchange-alt"></i> Raflar Arası Transfer</h2>

        <form id="transferForm">
            <div class="row">
                <div class="col-md-5">
                    <div class="card transfer-card">
                        <div class="card-header bg-primary text-white">
                            <strong><i class="fas fa-warehouse"></i> Kaynak Raf</strong>
                        </div>
                        <div class="card-body">
                            <label for="sourceShelf">Kaynak Raf Numarası</label>
                            <input type="text" class="form-control" id="sourceShelf" placeholder="Örn: RA-101" required>
                        </div>
                    </div>
                </div>

                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    <div class="transfer-arrow">
                        <i class="fas fa-arrow-right fa-2x text-success"></i>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="card transfer-card">
                        <div class="card-header bg-success text-white">
                            <strong><i class="fas fa-warehouse"></i> Hedef Raf</strong>
                        </div>
                        <div class="card-body">
                            <label for="targetShelf">Hedef Raf Numarası</label>
                            <input type="text" class="form-control" id="targetShelf" placeholder="Örn: RA-204" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card transfer-card mt-4">
                <div class="card-header bg-warning text-dark">
                    <strong><i class="fas fa-box"></i> Ürün ve Miktar</strong>
                </div>
                <div class="card-body row">
                    <div class="col-md-6">
                        <label for="productName">Ürün Adı</label>
                        <input type="text" class="form-control" id="productName" placeholder="Örn: Koltuk Kılıfı" required>
                    </div>
                    <div class="col-md-6">
                        <label for="productQty">Transfer Edilecek Miktar</label>
                        <input type="number" class="form-control" id="productQty" min="1" required>
                    </div>
                </div>
            </div>

            <div class="card transfer-card mt-4">
                <div class="card-header bg-info text-white">
                    <strong><i class="fas fa-info-circle"></i> Ek Bilgiler</strong>
                </div>
                <div class="card-body row">
                    <div class="col-md-6">
                        <label for="reason">Transfer Nedeni</label>
                        <select class="form-control" id="reason" required>
                            <option value="">Seçiniz...</option>
                            <option value="stok">Stok Dengeleme</option>
                            <option value="talep">Talep Karşılama</option>
                            <option value="diger">Diğer</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="date">Planlanan Tarih</label>
                        <input type="datetime-local" class="form-control" id="date" required>
                    </div>
                    <div class="col-12 mt-3">
                        <label for="note">Not (İsteğe Bağlı)</label>
                        <textarea class="form-control" id="note" rows="3"></textarea>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-success animated-button">
                    <i class="fas fa-paper-plane"></i> Transferi Başlat
                </button>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('date').value = new Date(new Date().getTime() + 3600000).toISOString().slice(0, 16);

        document.getElementById('transferForm').addEventListener('submit', function (e) {
          e.preventDefault();

          const sourceShelf = document.getElementById('sourceShelf').value.trim();
          const targetShelf = document.getElementById('targetShelf').value.trim();
          const productName = document.getElementById('productName').value.trim();
          const productQty = document.getElementById('productQty').value;
          const reason = document.getElementById('reason').value;
          const date = document.getElementById('date').value;
          const note = document.getElementById('note').value.trim();

          if (sourceShelf === targetShelf) {
            alert('Kaynak ve hedef raf numaraları aynı olamaz!');
            return;
          }

          const transferInfo = {
            sourceShelf,
            targetShelf,
            productName,
            productQty,
            reason,
            date,
            note,
            createdAt: new Date().toISOString()
          };

          console.log('Transfer Bilgisi:', transferInfo);

          alert('✅ Raflar arası transfer başarıyla oluşturuldu!\n\nTransfer ID: RF-' + Date.now());
          this.reset();
        });
    </script>
</body>
</html>
