@model AmbarYonetimi.ViewModels.DepolarViewModel
@{
    Layout = "_LayoutDepo.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="col-xl-6 col-lg-7 col-md-8">
        <div class="card shadow-lg border-0">

            <!-- Card Header -->
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-warehouse mr-2"></i> Yeni Malzeme Hareketi
                </h5>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label class="font-weight-bold text-secondary">Ürün Adı</label>
                        <select asp-for="UrunAdi" class="form-control">
                            <option value="Baslik">Başlık</option>
                            <option value="Kilif">Kılıf</option>
                            <option value="Kolcak">Kolçak</option>
                            <option value="Sunger">Sünger</option>
                            <option value="Iskelet">İskelet</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold text-secondary">Ürün Kodu</label>
                        <input asp-for="UrunKodu" class="form-control" />
                        <span asp-validation-for="UrunKodu" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold text-secondary">Raf Kodu</label>
                        <input asp-for="RafKodu" class="form-control" />
                        <span asp-validation-for="RafKodu" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold text-secondary">Hareket Tipi</label>
                        <select asp-for="HareketTipi" class="form-control">
                            <option value="Giriş">Giriş</option>
                            <option value="Çıkış">Çıkış</option>
                        </select>
                        <span asp-validation-for="HareketTipi" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold text-secondary">Miktar</label>
                        <input asp-for="Miktar" type="number" class="form-control" />
                        <span asp-validation-for="Miktar" class="text-danger"></span>
                    </div>
                 

                    <div class="form-group">
                        <label class="font-weight-bold text-secondary">İşlem Yapan</label>
                        <input asp-for="IslemYapan" class="form-control" />
                        <span asp-validation-for="IslemYapan" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-3">
                        <i class="fas fa-save mr-1"></i> Kaydet
                    </button>
                </form>
            </div>

            <div class="card-footer text-muted text-center">
                <small><i class="fas fa-info-circle mr-1 text-primary"></i> Lütfen tüm alanları eksiksiz doldurun.</small>
            </div>
        </div>
    </div>
</div>

@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger">
        @Html.Raw(TempData["Hata"])
    </div>
}
