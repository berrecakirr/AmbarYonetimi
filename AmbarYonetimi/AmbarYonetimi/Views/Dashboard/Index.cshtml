@{
    Layout = "_LayoutDashboard.cshtml";
}

<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">

<!-- Custom styles for this template-->
<link href="~/css/sb-admin-2.min.css" rel="stylesheet">

<div class="px-2 py-3 mb-4">
    <!-- Başlık ve Açıklama -->
    <div class="mb-4 text-center">
        <h1 class="h2 font-weight-bold text-gray-800 mb-2">Üretim Malzemeleri Genel Durum</h1>

    </div>

    <div class="row">
        <!-- Sol taraf - İstatistik Kartları -->
        <div class="col-lg-8">
            <div class="row">
                <!-- Toplam Stok -->
                <div class="col-xl-6 col-md-6 mb-3">
                    <div class="card border-left-success shadow h-100 py-2" style="border-left-width: 4px !important;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Toplam Stok
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">2,847</div>
                                </div>
                                <div class="col-auto">
                                    <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                        <i class="fas fa-boxes fa-sm text-white"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bugün Üretilen -->
                <div class="col-xl-6 col-md-6 mb-3">
                    <div class="card border-left-primary shadow h-100 py-2" style="border-left-width: 4px !important;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Bugün Üretilen
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">247</div>
                                </div>
                                <div class="col-auto">
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                        <i class="fas fa-industry fa-sm text-white"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Kritik Seviye -->
                <div class="col-xl-6 col-md-6 mb-3">
                    <div class="card border-left-warning shadow h-100 py-2" style="border-left-width: 4px !important;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Kritik Seviye
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">12 Malzeme</div>
                                </div>
                                <div class="col-auto">
                                    <div class="bg-warning rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                        <i class="fas fa-exclamation-triangle fa-sm text-white"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hatalı Ürün -->
                <div class="col-xl-6 col-md-6 mb-3">
                    <div class="card border-left-danger shadow h-100 py-2" style="border-left-width: 4px !important;">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                        Hatalı Ürün
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">5</div>
                                </div>
                                <div class="col-auto">
                                    <div class="bg-danger rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                                        <i class="fas fa-times-circle fa-sm text-white"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   


        <!-- Sağ taraf - Malzeme Dağılım Analizi -->
        <div class="col-lg-4">
            <div class="card shadow mb-3">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Malzeme Dağılım Analizi</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                        <canvas id="materialChart" width="452" height="260" style="display: block; height: 208px; width: 362px;" class="chartjs-render-monitor"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fas fa-circle text-primary"></i> Başlık (28%)
                        </span><br>
                        <span class="mr-2">
                            <i class="fas fa-circle text-success"></i> Kolçak (22%)
                        </span><br>
                        <span class="mr-2">
                            <i class="fas fa-circle text-info"></i> Kılıf (18%)
                        </span><br>
                        <span class="mr-2">
                            <i class="fas fa-circle text-warning"></i> İskelet (20%)
                        </span><br>
                        <span class="mr-2">
                            <i class="fas fa-circle text-danger"></i> Sünger (12%)
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Bootstrap core JavaScript-->
<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/js/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="~/vendor/chart.js/Chart.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/js/demo/chart-area-demo.js"></script>
<script src="~/js/demo/chart-pie-demo.js"></script>

<!-- Malzeme Dağılım Chart Script -->
<script>
    // Malzeme Dağılım Donut Chart
    var ctx = document.getElementById("materialChart");
    var materialChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ["Başlık", "Kolçak", "Kılıf", "İskelet", "Sünger"],
            datasets: [{
                data: [28, 22, 18, 20, 12],
                backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf', '#dda20a', '#c0392b'],
                hoverBorderColor: "rgba(234, 236, 244, 1)",
            }],
        },
        options: {
            maintainAspectRatio: false,
            tooltips: {
                backgroundColor: "rgb(255,255,255)",
                bodyFontColor: "#858796",
                borderColor: '#dddfeb',
                borderWidth: 1,
                xPadding: 15,
                yPadding: 15,
                displayColors: false,
                caretPadding: 10,
            },
            legend: {
                display: false
            },
            cutoutPercentage: 80,
        },
    });
</script>
